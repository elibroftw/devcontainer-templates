{
	"name": "AlmaLinux Development Common",
	"build": {
		"dockerfile": "Dockerfile"
	},

	// ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
	// "features": {},

	// common ports that need to be accessed locally (e.g. Axum, actix-web / xitca-web, flask / ASP.NET, blog post, postgresql, mongodb)
	// NOTE: 5284 is uncommon and will be removed once I migrate to using port 5000 for my ASP.NET project.
	// 	Use ports 500X instead for microservices in your mono-repo
	"forwardPorts": [3000, 8000, 8080, 5000, 5001, 5002, 5432, 27017, 5284],
	// ðŸ‘‡ Use 'postCreateCommand' to run commands after the container is created.

	// ðŸ‘‡ Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ElijahLopez.just-recipe-runner",
				"redhat.vscode-yaml",
				"timonwong.shellcheck",
				"github.vscode-github-actions",
				"mhutchie.git-graph"
			]
		}
	},
	"features": {

	}

	// ðŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
